.testimonial {
  background-color: rgba(255, 255, 255, .8);
  padding: 0 18px 18px;
  margin-bottom: 98px;

  @mixin atLarge {
    margin-bottom: 0;
    padding: 0 1.8rem 1.8rem;
  }

  &--last {
    margin-bottom: 0;
  }

  &__photo {
    width: 160px;
    height: 160px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, .8);
    border: 6px solid rgba(255, 255, 255, .8);
    overflow: hidden;
    margin: 0 auto -80px auto;
    position: relative;
    top: -80px;
  }

  &__title {
    color: $mainBlue;
    font-weight: 500;
    font-size: 1.5rem;
    text-align: center;
    margin: .5rem 0 0;
  }

  &__subtitle {
    color: $mainOrange;
    font-size: 1rem;
    margin: .5rem 0 1rem;
    font-weight: 400;
    text-align: center;
  }
}